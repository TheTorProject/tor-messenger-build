       <rows id="summaryRows"/>
     </grid>
     <separator/>
-    <checkbox id="connectAutomatically" label= "&accountSummary.connectAutomatically.label;" checked="true"/>
+    <checkbox id="connectAutomatically" label= "&accountSummary.connectAutomatically.label;" checked="false"/>
   </wizardpage>
 
 </wizard>
